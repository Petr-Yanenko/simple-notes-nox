cmake_minimum_required (VERSION 2.6)
project (simple-notes-nox)

include_directories (
  include
  /usr/include
  /usr/include/glib-2.0
  /usr/include/glib-2.0/gio
  /usr/lib/x86_64-linux-gnu/glib-2.0/include
  /usr/src/linux-headers-4.9.0-8-common/include
  /usr/src/linux-headers-4.9.0-8-common/include/linux
  /usr/src/linux-headers-4.9.0-8-common/arch/x86/include
  /usr/src/linux-headers-4.9.0-8-amd64/include
  )

add_subdirectory (shared_source)
add_subdirectory (simple_notes)
add_subdirectory (simple_notes_tests)
